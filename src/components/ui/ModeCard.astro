---
interface Props {
  title: string;
  badge: string;
  badgeColor?: string;
  description: string;
  before: string;
  after: string;
  reverse?: boolean;
}

const {
  title,
  badge,
  badgeColor = "bg-primary",
  description,
  before,
  after,
  reverse = false,
} = Astro.props;
---

<div class="grid md:grid-cols-2 gap-8 items-center">
  <div class:list={[reverse ? "md:order-2" : ""]}>
    <div class="flex items-center gap-3">
      <h3 class="text-2xl font-bold">{title}</h3>
      <span class:list={["rounded-full px-3 py-0.5 text-xs font-semibold text-white", badgeColor]}>
        {badge}
      </span>
    </div>
    <p class="mt-3 text-text-muted leading-relaxed">{description}</p>
  </div>

  <div class:list={[reverse ? "md:order-1" : ""]}>
    <div class="flex flex-col gap-3">
      <div class="rounded-xl surface-card p-5">
        <p class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-2">You say:</p>
        <p class="text-sm text-text/70 italic leading-relaxed">"{before}"</p>
      </div>

      <div class="flex justify-center">
        <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>

      <div class="rounded-xl bg-primary/5 border border-primary/15 p-5">
        <p class="text-xs font-semibold text-primary uppercase tracking-wider mb-2">Waffler outputs:</p>
        <p class="text-sm text-text leading-relaxed">{after}</p>
      </div>
    </div>
  </div>
</div>
