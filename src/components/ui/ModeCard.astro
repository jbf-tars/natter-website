---
interface Props {
  title: string;
  badge: string;
  badgeColor?: string;
  description: string;
  before: string;
  after: string;
}

const {
  title,
  badge,
  badgeColor = "bg-primary",
  description,
  before,
  after,
} = Astro.props;
---

<div class="glass rounded-2xl p-6 md:p-8 flex flex-col gap-5">
  <div class="flex items-center gap-3">
    <h3 class="text-xl font-bold text-text">{title}</h3>
    <span class:list={["rounded-full px-3 py-0.5 text-xs font-semibold text-white", badgeColor]}>
      {badge}
    </span>
  </div>

  <p class="text-text-muted text-sm leading-relaxed">{description}</p>

  <div class="flex flex-col gap-3">
    <div class="rounded-lg bg-bg/50 p-4">
      <p class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-2">You say:</p>
      <p class="text-sm text-text/80 italic">"{before}"</p>
    </div>

    <div class="flex justify-center">
      <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>

    <div class="rounded-lg bg-primary/10 border border-primary/20 p-4">
      <p class="text-xs font-semibold text-accent uppercase tracking-wider mb-2">Natter outputs:</p>
      <p class="text-sm text-text">{after}</p>
    </div>
  </div>
</div>
