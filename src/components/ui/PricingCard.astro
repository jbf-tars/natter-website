---
interface Props {
  title: string;
  price: string;
  period?: string;
  features: string[];
  cta: string;
  ctaHref: string;
  highlighted?: boolean;
}

const {
  title,
  price,
  period = "",
  features,
  cta,
  ctaHref,
  highlighted = false,
} = Astro.props;
---

<div
  class:list={[
    "rounded-2xl p-8 flex flex-col gap-6 h-full",
    highlighted ? "surface-pricing-highlighted" : "surface-card",
  ]}
>
  <div>
    <h3 class:list={["font-semibold text-text", highlighted ? "text-xl" : "text-lg"]}>
      {title}
    </h3>
    <div class="mt-3 flex items-baseline gap-1">
      <span class:list={[
        "font-serif font-black text-text",
        highlighted ? "text-5xl" : "text-3xl",
      ]}>{price}</span>
      {period && <span class="text-text-muted text-sm">{period}</span>}
    </div>
  </div>

  <ul class="flex flex-col gap-3">
    {
      features.map((feature) => (
        <li class="flex items-start gap-2 text-sm text-text-muted">
          <svg
            class:list={["mt-0.5 h-4 w-4 shrink-0", highlighted ? "text-primary" : "text-text-muted"]}
            fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
          {feature}
        </li>
      ))
    }
  </ul>

  <a
    href={ctaHref}
    data-download-btn
    class:list={[
      "mt-auto rounded-xl px-6 py-3 text-center font-semibold transition-colors",
      highlighted
        ? "bg-primary text-white hover:bg-primary-hover text-base"
        : "border border-border text-text hover:bg-bg-subtle text-sm",
    ]}
  >
    {cta}
  </a>
</div>
