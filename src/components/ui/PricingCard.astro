---
interface Props {
  title: string;
  price: string;
  period?: string;
  features: string[];
  cta: string;
  ctaHref: string;
  highlighted?: boolean;
}

const {
  title,
  price,
  period = "",
  features,
  cta,
  ctaHref,
  highlighted = false,
} = Astro.props;
---

<div
  class:list={[
    "rounded-2xl p-8 flex flex-col gap-6",
    highlighted
      ? "glass border-primary/30 bg-primary/5"
      : "glass",
  ]}
>
  <div>
    <h3 class="text-lg font-semibold text-text">{title}</h3>
    <div class="mt-3 flex items-baseline gap-1">
      <span class="text-4xl font-bold text-text">{price}</span>
      {period && <span class="text-text-muted text-sm">{period}</span>}
    </div>
  </div>

  <ul class="flex flex-col gap-3">
    {
      features.map((feature) => (
        <li class="flex items-start gap-2 text-sm text-text-muted">
          <svg
            class="mt-0.5 h-4 w-4 shrink-0 text-primary"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M5 13l4 4L19 7"
            />
          </svg>
          {feature}
        </li>
      ))
    }
  </ul>

  <a
    href={ctaHref}
    data-download-btn
    class:list={[
      "mt-auto rounded-xl px-6 py-3 text-center text-sm font-semibold transition-colors",
      highlighted
        ? "bg-primary text-white hover:bg-dark"
        : "bg-surface text-text hover:bg-surface/80 border border-white/10",
    ]}
  >
    {cta}
  </a>
</div>
