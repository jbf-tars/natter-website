---
import DownloadButton from "../ui/DownloadButton.astro";
---

<section class="px-6 py-24">
  <div class="relative mx-auto max-w-4xl overflow-hidden rounded-3xl px-8 py-16 text-center md:px-16 md:py-24">
    <!-- Gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/20 via-dark/10 to-bg" aria-hidden="true"></div>
    <div class="absolute inset-0 glass" aria-hidden="true"></div>

    <div class="relative z-10">
      <h2 class="text-3xl font-bold md:text-5xl">
        Ready to stop typing?
      </h2>
      <p class="mx-auto mt-4 max-w-md text-text-muted md:text-lg">
        Join thousands who've switched from keyboard to voice. Download Natter and start talking.
      </p>
      <div class="mt-8">
        <DownloadButton size="lg" />
      </div>
      <p class="mt-4 text-xs text-text-muted/60">
        Free 7-day trial. No signup required.
      </p>
    </div>
  </div>
</section>
