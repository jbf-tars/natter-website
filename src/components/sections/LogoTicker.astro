---
import AppIcon from "../ui/AppIcon.astro";

const apps = [
  { name: "Slack", icon: "slack" },
  { name: "VS Code", icon: "visualstudiocode" },
  { name: "Notion", icon: "notion" },
  { name: "Gmail", icon: "gmail" },
  { name: "Google Docs", icon: "googledocs" },
  { name: "Figma", icon: "figma" },
  { name: "Linear", icon: "linear" },
  { name: "ChatGPT", icon: "openai" },
  { name: "Cursor", icon: "cursor" },
  { name: "Obsidian", icon: "obsidian" },
  { name: "Arc", icon: "arc" },
  { name: "Word", icon: "microsoftword" }
];
---

<section class="py-10 overflow-hidden" aria-label="Works with your favorite apps">
  <p class="anim-fade text-center text-xs font-semibold text-text-muted uppercase tracking-widest mb-8">
    Works everywhere you do
  </p>

  <div class="logo-marquee-wrapper">
    <div class="logo-marquee">
      <div class="logo-marquee-track" aria-hidden="false">
        {apps.map((app) => (
          <div class="logo-marquee-item">
            <AppIcon name={app.icon} class="w-5 h-5" />
            <span class="text-sm font-medium text-text">{app.name}</span>
          </div>
        ))}
      </div>
      <div class="logo-marquee-track" aria-hidden="true">
        {apps.map((app) => (
          <div class="logo-marquee-item">
            <AppIcon name={app.icon} class="w-5 h-5" />
            <span class="text-sm font-medium text-text">{app.name}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
