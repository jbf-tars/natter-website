---
const apps = [
  "Slack", "VS Code", "Notion", "Gmail", "Google Docs",
  "Figma", "Linear", "ChatGPT", "Cursor", "Obsidian", "Arc", "Word"
];
---

<section class="py-10 overflow-hidden" aria-label="Works with your favorite apps">
  <p class="anim-fade text-center text-xs font-semibold text-text-muted uppercase tracking-widest mb-8">
    Works everywhere you do
  </p>

  <div class="logo-marquee-wrapper">
    <div class="logo-marquee">
      <div class="logo-marquee-track" aria-hidden="false">
        {apps.map((app) => (
          <div class="logo-marquee-item">
            <span class="text-sm font-medium text-text">{app}</span>
          </div>
        ))}
      </div>
      <div class="logo-marquee-track" aria-hidden="true">
        {apps.map((app) => (
          <div class="logo-marquee-item">
            <span class="text-sm font-medium text-text">{app}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
