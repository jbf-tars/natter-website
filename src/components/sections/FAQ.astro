---
import { faqs } from "../../data/faq";
import FAQItem from "../ui/FAQItem.astro";
---

<section id="faq" class="section-normal px-6">
  <div class="mx-auto max-w-5xl grid md:grid-cols-5 gap-12 md:gap-16">
    <div class="anim-fade md:col-span-2 md:sticky md:top-28 md:self-start">
      <h2 class="text-2xl font-semibold md:text-3xl">
        Frequently asked questions
      </h2>
      <p class="mt-4 text-text-muted">
        Everything you need to know about Natter. Can't find what you're looking for?
        <a href="mailto:hello@nattertool.com" class="text-primary hover:underline">Get in touch</a>.
      </p>
    </div>

    <div class="anim-fade anim-delay-1 md:col-span-3">
      {faqs.map((faq) => <FAQItem question={faq.question} answer={faq.answer} />)}
    </div>
  </div>
</section>
