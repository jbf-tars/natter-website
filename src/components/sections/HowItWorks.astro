---
const steps = [
  {
    number: "1",
    icon: `<svg class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 7.5l3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0021 18V6a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 003 6v12a2.25 2.25 0 002.25 2.25z" /></svg>`,
    title: "Press your hotkey",
    description: "Hit your global shortcut from any app",
  },
  {
    number: "2",
    icon: `<svg class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 18.75a6 6 0 006-6v-1.5m-6 7.5a6 6 0 01-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 01-3-3V4.5a3 3 0 116 0v8.25a3 3 0 01-3 3z" /></svg>`,
    title: "Speak naturally",
    description: "Talk like you normally would â€” Whisper handles the rest",
  },
  {
    number: "3",
    icon: `<svg class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456z" /></svg>`,
    title: "Clean text appears",
    description: "AI-cleaned text is pasted right where your cursor is",
  },
];
---

<section class="px-6 py-24">
  <div class="mx-auto max-w-5xl">
    <h2 class="reveal text-center text-3xl font-bold md:text-4xl">
      How it works
    </h2>

    <div class="mt-16 grid gap-8 md:grid-cols-3">
      {
        steps.map((step, i) => (
          <div class={`reveal reveal-delay-${i + 1} flex flex-col items-center text-center`}>
            <div class="flex h-16 w-16 items-center justify-center rounded-2xl bg-primary/10">
              <Fragment set:html={step.icon} />
            </div>
            <h3 class="mt-5 text-lg font-semibold text-text">{step.title}</h3>
            <p class="mt-2 text-sm text-text-muted">{step.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
