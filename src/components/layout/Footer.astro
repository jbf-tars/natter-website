const currentYear = new Date().getFullYear();
---

<footer class="border-t border-white/5 bg-bg">
  <div class="mx-auto max-w-6xl px-6 py-12">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Logo -->
      <div class="flex items-center gap-2">
        <img src="/favicon.svg" alt="Natter" class="h-6 w-6" />
        <span class="font-semibold text-text">Natter</span>
      </div>

      <!-- Links -->
      <nav class="flex flex-wrap justify-center gap-6 text-sm text-text-muted">
        <a href="/privacy" class="hover:text-text transition-colors">Privacy</a>
        <a href="https://github.com/jbf-tars" class="hover:text-text transition-colors" target="_blank" rel="noopener">GitHub</a>
        <a href="https://x.com" class="hover:text-text transition-colors" target="_blank" rel="noopener">Twitter/X</a>
        <a href="mailto:hello@nattertool.com" class="hover:text-text transition-colors">Contact</a>
      </nav>

